{
  "manifest_version": 2,

  "name": "Fluig extension",
  "description": "This is a simple extension for the Fluig",
  "version": "1.0",
  
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

  "permissions": [
    "http://*/",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/fluig_extension.png",
    "default_popup": "html/fluig_extension.html"
  },
  
  "icons": { "16": "img/logo_fluig.png",
             "48": "img/logo_fluig48.png"
  }
}